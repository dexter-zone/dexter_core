{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "types": ["node"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
